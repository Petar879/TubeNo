{
    "name": "TubeNo",
    "version": "1.0",
    "description": "Remove videos from the homepage and place an inspirational quote",
    "manifest_version": 2,
    "permissions": [
      "webRequest",
      "storage",
      "webRequestBlocking",
      "*://*.youtube.com/", "*://*.youtu.be/",
      "https://api.forismatic.com/"
    ],

    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },

    "web_accessible_resources":
    [
      "quote_Page/*"
    ],

    "browser_action": {
      "default_popup": "../popup_Page/popup.html",
      "default_icon": {
        "16": "img/icon_16.png",
        "32": "img/icon_32.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
      }
    },

    "icons": {
      "16": "img/icon_16.png",
      "32": "img/icon_32.png",
      "48": "img/icon_48.png",
      "128": "img/icon_128.png"
  }
}